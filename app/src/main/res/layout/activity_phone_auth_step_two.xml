<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.wezebra.zebraking.ui.installment.PhoneAuthStepTwoActivity"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/edit_text_title_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="服务密码"
            android:textSize="@dimen/font_normal"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/edit_text_height"
            android:layout_weight="1"
            android:background="@drawable/edit_text_border"
            android:inputType="textPassword"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/verify_code_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_margin_top_about_input_item"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/edit_text_title_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="验证码"
            android:textSize="@dimen/font_normal"/>

        <EditText
            android:id="@+id/verify_code"
            android:layout_width="90dp"
            android:layout_height="@dimen/edit_text_height"
            android:background="@drawable/edit_text_border"/>

        <ImageView
            android:id="@+id/verify_code_img"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_border"
            android:scaleType="fitXY"/>

    </LinearLayout>

    <TextView
        android:id="@+id/submit"
        android:layout_marginTop="60dp"
        android:text="提交"
        style="@style/CustomTextViewButton"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_margin_top_per_step"
        android:text="服务密码获取方式如下"
        android:textSize="@dimen/font_normal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_margin_top_about_input_item"
        android:padding="1dp"
        android:background="@drawable/edit_text_border"
        android:orientation="vertical">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@drawable/border_with_top_left_corner"/>

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/tips_padding"
                android:gravity="center"
                android:text="1.手机拨号转人工服务"
                android:textSize="@dimen/font_normal"
                android:background="@drawable/border_with_no_corner"/>

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:padding="@dimen/tips_padding"
                android:gravity="center"
                android:text="2.手机登录网址“忘记密码”查询"
                android:textSize="@dimen/font_normal"
                android:background="@drawable/border_with_top_right_corner"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/border_with_no_corner"
                android:text="移动"
                android:textSize="@dimen/font_normal"/>

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/tips_padding"
                android:gravity="center"
                android:text="10086"
                android:textSize="@dimen/font_normal"
                android:background="@drawable/border_with_no_corner"
                android:autoLink="phone"/>

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:padding="@dimen/tips_padding"
                android:gravity="center"
                android:text="10086.cn"
                android:textSize="@dimen/font_normal"
                android:background="@drawable/border_with_no_corner"
                android:autoLink="web"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="联通"
                android:textSize="@dimen/font_normal"
                android:background="@drawable/border_with_no_corner"/>

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/tips_padding"
                android:gravity="center"
                android:text="10010"
                android:textSize="@dimen/font_normal"
                android:background="@drawable/border_with_no_corner"
                android:autoLink="phone"/>

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:padding="@dimen/tips_padding"
                android:gravity="center"
                android:text="10010.com"
                android:textSize="@dimen/font_normal"
                android:background="@drawable/border_with_no_corner"
                android:autoLink="web"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="电信"
                android:textSize="@dimen/font_normal"
                android:background="@drawable/border_with_bottom_left_corner"/>

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/tips_padding"
                android:gravity="center"
                android:text="10000"
                android:textSize="@dimen/font_normal"
                android:background="@drawable/border_with_no_corner"
                android:autoLink="phone"/>

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:padding="@dimen/tips_padding"
                android:gravity="center"
                android:text="189.cn"
                android:textSize="@dimen/font_normal"
                android:background="@drawable/border_with_bottom_right_corner"
                android:autoLink="web"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
