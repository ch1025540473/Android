<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.wezebra.zebraking.ui.myaccount.CashActivity">

        <RelativeLayout
            style="@style/account_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/bank_card_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_large"
                tools:text="6124***********1589"/>

            <TextView
                android:id="@+id/bank_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/font_large"
                tools:text="工商银行"/>
        </RelativeLayout>

        <include
            layout="@layout/empty_divider_layout"/>

        <RelativeLayout
            style="@style/custom_edit_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_cash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="12"
                android:background="@color/white"
                android:hint="最多可提现金额 800.00"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/font_large"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/submit"
            style="@style/CustomTextViewButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="40dp"
            android:text="@string/next_step"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="30dp"
            android:text="@string/cash_tip"
            android:textSize="@dimen/font_large"/>

    </LinearLayout>


</ScrollView>

