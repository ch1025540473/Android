<?xml version="1.0" encoding="utf-8"?>
<!--连连支付个人信息认证视图-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#55000000"
        android:layout_marginTop="1px"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:textSize="15sp"
        android:gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:text="推荐使用本人银行卡绑定，绑定后不能修改"/>
 <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#55000000"/>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <!--持卡人-->
        <TextView
            android:id="@+id/wezebra_cardhodler"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:text="持  卡  人"/>
        <!--持卡人姓名-->
        <EditText
            android:id="@+id/wezebra_tv_cardhodler_name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:hint="请输入持卡人姓名"
            android:maxLength="10"
            android:singleLine="true"
            android:layout_toRightOf="@id/wezebra_cardhodler"
            android:layout_marginLeft="5dp"
            android:background="#00000000"/>
    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#55000000"/>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <!--持卡人-->
        <TextView
            android:id="@+id/wezebra_tv_id_card_code"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:text="身份证号"/>
        <!--持卡人姓名-->
        <EditText
            android:id="@+id/wezebra_et_id_card_code"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:hint="请输入持卡人身份证号"
            android:layout_toRightOf="@id/wezebra_tv_id_card_code"
            android:maxLength="30"
            android:singleLine="true"
            android:layout_marginLeft="5dp"
            android:background="#00000000"
            />
    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#55000000"/>
    
    <Button
        android:id="@+id/wezebra_first_lianlian_certificate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="下一步"
        android:background="@drawable/button_green_bg"
        android:textColor="#ffeeeeee"
        android:textSize="20sp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>
</LinearLayout>
