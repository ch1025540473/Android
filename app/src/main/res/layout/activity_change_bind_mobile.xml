<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/new_bind_mobile"
    android:padding="16dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_large"
        android:text="请输入新的手机号"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <EditText
            android:id="@+id/mobile_edit"
            android:layout_width="225dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:hint="新手机号"
            android:background="@drawable/border_radius"
            style="@style/custom_edit_layout"/>

        <TextView
            android:id="@+id/count_second"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="获取短信验证码"
            android:background="@color/button_blue"/>

    </RelativeLayout>

    <EditText
        android:id="@+id/mobile_volicode"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="手机验证码"
        android:background="@drawable/border_radius"
        style="@style/custom_edit_layout"/>

    <TextView
        android:id="@+id/submit_security_Code"
        android:layout_below="@+id/info_layout_2"
        android:layout_marginTop="20dp"
        android:text="下一步"
        style="@style/CustomTextViewButton"/>

</LinearLayout>
