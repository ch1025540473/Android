<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:id="@+id/email_input">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="@dimen/font_large"
        android:layout_marginTop="15dp"
        android:text="@string/company_email_des"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="@dimen/font_large"
        android:textColor="#000"
        android:text="@string/company_email_des_mark"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/email_addr"
            android:hint="邮箱地址"
            android:background="@drawable/border_radius"
            style="@style/custom_edit_layout"/>
    </LinearLayout>
    <TextView
        android:id="@+id/submit"
        android:layout_below="@+id/info_layout_2"
        android:layout_marginTop="20dp"
        android:text="立即验证"
        style="@style/CustomTextViewButton"/>




</LinearLayout>
