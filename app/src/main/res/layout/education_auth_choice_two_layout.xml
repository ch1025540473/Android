<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/upload_layout"
                android:layout_marginTop="@dimen/layout_margin_top_per_step"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_margin_top_per_step"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left">

                <ImageView
                    android:id="@+id/diploma"
                    android:layout_width="@dimen/exam_dimen_small"
                    android:layout_height="@dimen/exam_dimen_small"
                    android:layout_gravity="center"
                    android:background="@drawable/exam_diploma"
                    android:src="@color/half_transparent"/>

                <TextView
                    android:layout_width="@dimen/exam_dimen_small"
                    android:layout_height="@dimen/exam_dimen_small"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="示例\n毕业证"
                    android:textSize="@dimen/font_small"
                    android:textColor="@color/text_light"/>

            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/upload_margin_left">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/student_card"
                    android:layout_width="@dimen/exam_dimen_small"
                    android:layout_height="@dimen/exam_dimen_small"
                    android:layout_gravity="center"
                    android:background="@drawable/exam_student_card"
                    android:src="@color/half_transparent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="示例\n学生证"
                    android:textSize="@dimen/font_small"
                    android:textColor="@color/text_light"/>

            </FrameLayout>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_margin_top_per_step"
        android:text="斑马王国的要求："
        android:textSize="@dimen/wenan_font_size"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_margin_top_about_example_text"
        android:text="1.毕业生可以上传毕业照片，需包含毕业证编号，在校生可以上传学生证照片"
        android:textSize="@dimen/wenan_font_size"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_margin_top_about_example_text"
        android:text="2.图片需包含自己的身份信息，如：姓名、身份证号；图片清晰，照片上文字清晰可见"
        android:textSize="@dimen/wenan_font_size"/>

    <TextView
        android:id="@+id/submit_two"
        android:layout_marginTop="@dimen/submit_button_margin_top"
        android:layout_marginBottom="@dimen/scroll_view_submit_button_layout_margin_bottom"
        android:text="完成"
        style="@style/CustomTextViewButton" />

            </LinearLayout>
    </ScrollView>

</LinearLayout>
