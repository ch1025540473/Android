<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/upload_layout_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/upload_one_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/photo_one_second"
            android:layout_width="@dimen/exam_dimen_small"
            android:layout_height="@dimen/exam_dimen_small"
            android:layout_gravity="center"
            android:background="@drawable/example_border_small"
            android:src="@drawable/camera_small"
            android:scaleType="center"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/upload_two_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/upload_one_second"
        android:layout_marginLeft="@dimen/upload_margin_left"
        android:visibility="gone">
        <ImageView
            android:id="@+id/photo_two_second"
            android:layout_width="@dimen/exam_dimen_small"
            android:layout_height="@dimen/exam_dimen_small"
            android:layout_gravity="center"
            android:background="@drawable/example_border_small"
            android:src="@drawable/camera_small"
            android:scaleType="center"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/upload_three_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/upload_two_second"
        android:layout_marginLeft="@dimen/upload_margin_left"
        android:visibility="gone">
        <ImageView
            android:id="@+id/photo_three_second"
            android:layout_width="@dimen/exam_dimen_small"
            android:layout_height="@dimen/exam_dimen_small"
            android:layout_gravity="center"
            android:background="@drawable/example_border_small"
            android:src="@drawable/camera_small"
            android:scaleType="center"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/upload_four_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/upload_three_second"
        android:layout_marginLeft="@dimen/upload_margin_left"
        android:visibility="gone">
        <ImageView
            android:id="@+id/photo_four_second"
            android:layout_width="@dimen/exam_dimen_small"
            android:layout_height="@dimen/exam_dimen_small"
            android:layout_gravity="center"
            android:background="@drawable/example_border_small"
            android:src="@drawable/camera_small"
            android:scaleType="center"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/upload_five_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/upload_four_second"
        android:layout_marginLeft="@dimen/upload_margin_left"
        android:visibility="gone">
        <ImageView
            android:id="@+id/photo_five_second"
            android:layout_width="@dimen/exam_dimen_small"
            android:layout_height="@dimen/exam_dimen_small"
            android:layout_gravity="center"
            android:background="@drawable/example_border_small"
            android:src="@drawable/camera_small"
            android:scaleType="center"/>
    </FrameLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/add_one_more_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/upload_layout_second"
        android:layout_marginLeft="@dimen/upload_margin_left"
        android:visibility="visible">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/exam_dimen_small"
                android:layout_height="@dimen/exam_dimen_small"
                android:layout_gravity="center"
                android:background="@drawable/example_border_small"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="添加照片"
                android:textSize="0sp"
                android:textColor="@color/text_light"
                android:drawableTop="@drawable/add_with_text"/>

        </FrameLayout>
    </LinearLayout>

</RelativeLayout>
