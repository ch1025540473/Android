<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.wezebra.zebraking.ui.myaccount.FeedbackActivity">

    <EditText
        android:id="@+id/et_feedback"
        android:hint="您遇到的问题与意见我们会及时反馈与改进"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:maxLength="400"
        android:minHeight="200dp"
        android:padding="8dp"
        android:gravity="top"
        android:background="@drawable/round_4_corner_white_bg"/>

    <TextView
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_below="@id/et_feedback"
        android:text="提交"
        style="@style/CustomTextViewButton"/>

</RelativeLayout>
