<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wezebra.zebraking.ui.myaccount.CashActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="clip_horizontal"
        android:orientation="vertical">

        <include
            layout="@layout/empty_divider_layout"/>

        <RelativeLayout
            style="@style/custom_edit_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_charge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="12"
                android:background="@color/white"
                android:hint="请输入金额"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/font_large"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/submit"
            style="@style/CustomTextViewButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="40dp"
            android:text="@string/next_step"/>

        <TextView
            android:id="@+id/tv_charge_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="30dp"
            android:textSize="@dimen/font_large"/>

    </LinearLayout>


</ScrollView>
